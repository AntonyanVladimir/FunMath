@model FunMath.ViewModels.CurrentChallengeViewModel
@{
    ViewData["Title"] = "WrongAnswer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4 bg-light vh-100">
    <h3 class="mt-4 mb-4 text-center">Leider Falsche Antwort!</h3>
    <div class="text-center mt-4">
        <img src="~/lib/Images/wrongAnswer.jpg" class="levelCompleteImg" />
    </div>
    <div class="text-center mt-4">
        <a class="btn btn-primary" asp-controller="InGame" asp-action="LoadLevel" asp-route-levelNumber="@Model.LevelNumber" asp-route-challengeIndex="@Model.Index" asp-route-Points="@Model.Punkte">Erneut vesuchen</a>
        <a class="btn btn-primary" asp-controller="InGame" asp-action="LoadLevel" asp-route-levelNumber="@Model.LevelNumber" asp-route-challengeIndex="@(Model.Index+1)" asp-route-Points="@Model.Punkte">Überspringen</a>
    </div>
</div>

